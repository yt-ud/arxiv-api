<% if !@titles.empty? then %>
  <% count = 1 %>
  <% @titles.zip(@authors, @abstracts, @abstracts_ja, @urlpdfs) do |title, author, abstract, abstract_ja, urlpdf| %>
    <h3><%= "【" + count.to_s + "】" + title %></h3>
    <p><%= author[0] %></p>
    <p><%= abstract %></p>
    <p><%= abstract_ja %></p>
    <p><%= urlpdf %></p>
    <% count += 1 %>
  <% end %>
<% else %>
  <h3>本日のアーカイブ論文はありませんでした。</h3>
<% end %>